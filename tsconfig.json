{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
    "types": ["jest"],
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitOverride": true,
    "noImplicitThis": true
    //"noImplicitReturns": true
  },
  "include": ["./src/main.ts", "./src/**/*.ts", "./data/interfaces/**/*.json", "./data/config/**/*.json"]
}
